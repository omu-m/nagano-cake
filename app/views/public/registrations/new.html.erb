<div class="container">
  <div class="row">
    <div class="col3-md offset-1 mt-5">
      <h2>新規登録</h2>

      <%= form_with model: @public, url: new_customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

          <table class="table table-hover">
            <div class="field">
              <tr>
                <td></td>
                <td><%= f.label :"名前" %></td>
                <td><%= f.label :"(姓)" %></td>
                <td><%= f.email_field :last_name %></td>
                <td><%= f.label :"(名)" %></td>
                <td><%= f.email_field :first_name %></td>
              </tr>
            </div>

            <div class="field">
              <tr>
                <td></td>
                <td><%= f.label :"フリガナ" %></td>
                <td><%= f.label :"(ｾｲ)" %></td>
                <td><%= f.email_field :last_name_kana %></td>
                <td><%= f.label :"(ﾒｲ)" %></td>
                <td><%= f.email_field :first_name_kana %></td>
                <td></td>
              </tr>
            </div>

            <div class="field">
              <tr>
                <td><%= f.label :"メールアドレス" %></td>
                <td><%= f.text_field :email %></td>
              </tr>
            </div>

            <div class="field">
              <tr>
                <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
                <td><%= f.text_field :post_number %></td>
              </tr>
            </div>

            <div class="field">
              <tr>
                <td><%= f.label :"住所" %></td>
                <td><%= f.text_field :address %></td>
              </tr>
            </div>

            <div class="field">
              <tr>
                <td><%= f.label :"電話番号(ハイフンなし)" %></td>
                <td><%= f.text_field :phone_number %></td>
              </tr>
            </div>

            <div class="field">
              <tr>
                <td><%= f.label :"パスワード" %>
                  <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
                </td>
                <td>
                  <%= f.password_field :encrypted_password, autocomplete: "new-password" %>
                </td>
              </tr>
            </div>

            <div class="field">
              <tr>
                <td><%= f.label :"パスワード(確認用)" %></td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
            </div>

            <div class="actions">
              <td></td>
              <td><%= f.submit "新規登録" %></td>
            </div>
      <% end %>

      <div class="actions">
        <td>既に登録済みの方</td>
        <td><%= link_to "こちら", customer_session_path %> からログインしてください。</td>
      </div>
    </div>
  </div>
</div>
